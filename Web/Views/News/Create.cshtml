@model NewsItem
<div class="container pt-2">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="Created" value="@DateTime.Now" />
        <div class="form-group">
            <label asp-for="Header" class="text-secondary"></label>
            <div>
                <span asp-validation-for="Header" class="text-danger">
                </span>
            </div>
        

            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="btn btn-secondary">
                        <i class="fas fa-heading  pt-1"></i>
                    </div>
                    
                </div>
                <input asp-for="Header" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PhotoURL" class="text-secondary"></label>
            <div>
                <span asp-validation-for="PhotoURL" class="text-danger">

                </span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="btn btn-secondary">
                        <i class="fas fa-underline  pt-1"></i>
                    </div>
                   
                </div>
                <input asp-for="PhotoURL" class="form-control" />
            </div>
        </div>



        <label asp-for="Body" class="text-secondary"></label>
        <div>
            <span asp-validation-for="Body" class="text-danger">

            </span>
        </div>



        <textarea asp-for="Body" class="form-control mb-2" rows="5" cols="50"></textarea>


        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>