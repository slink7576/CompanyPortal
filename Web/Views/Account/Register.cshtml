@model RegisterViewModel


<div class="container mt-3">





    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
            <div class="form-group">
                <label asp-for="Email" class="control-label text-secondary"></label>
                <div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend ">
                        <i class="btn btn-secondary far fa-envelope pt-1"></i>
                    </div>

                   



                    <input asp-for="Email" class="form-control" />


                </div>


            </div>

        



        <div class="form-group">



            <label asp-for="Name" class="text-secondary"></label>
            <div>
                <span asp-validation-for="Name" class="text-danger">
                </span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend ">
                    <i class="btn btn-secondary fa fa-user"></i>
                </div>



           

                    <input asp-for="Name" class="form-control" />

                </div>


            </div>
        <div class="form-group">



            <label asp-for="Surname" class="text-secondary"></label>

            <div>

                <span asp-validation-for="Surname" class="text-danger">

                </span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <i class="btn btn-secondary fa fa-user "></i>
                </div>
                <input asp-for="Surname" class="form-control" />
            </div>

        </div>
        <div class="form-group">



            <label asp-for="Phone" class="text-secondary"></label>
            <div>
                <span asp-validation-for="Phone" class="text-danger">
                </span>
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="btn btn-secondary">
                        <i class="fas fa-phone pt-1"></i>
                    </div>
                    
                </div>
                <input asp-for="Phone" class="form-control" />
            </div>

        </div>
        <div class="form-group">



            <label asp-for="Position" class="text-secondary"></label>
            <div>
                <span asp-validation-for="Position" class="text-danger">
                </span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="btn btn-secondary">
                        <i class="fa fa-briefcase pt-1"></i>
                    </div>
                    
                </div>
                <select asp-for="Position" class="form-control"
                        asp-items="@new SelectList(Enum.GetNames(typeof(Position)))"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhotoURL" class="text-secondary"></label>
            <div>
                <span asp-validation-for="PhotoURL" class="text-danger">

                </span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="btn btn-secondary">
                        <i class="fas fa-underline pt-1"></i>
                    </div>
                   
                </div>
                <input asp-for="PhotoURL" class="form-control" placeholder="60x60" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label text-secondary"></label>
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="btn btn-secondary">
                        <i class="fas fa-check pt-1"></i>
                    </div>
                    
                </div>
                <input asp-for="Password" class="form-control" />

            </div>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm" class="control-label text-secondary"></label>
            <div>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="btn btn-secondary">
                        <i class="fas fa-check-double pt-1"></i>
                    </div>
                </div>
                    <input asp-for="PasswordConfirm" class="form-control" />
                </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="News" class="btn btn-secondary">Back</a>
        </div>
    </form>




</div>

