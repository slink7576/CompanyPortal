
@model RegisterViewModel

<div class="row">

    <nav class="col-md-2 p-0">
        <div class="sidebar-sticky">
            @await Component.InvokeAsync("NavigationMenu")
        </div>

    </nav>
    <div class="col-md-9 p-4">


        <form asp-action="Edit" method="post">
         
            <input type="hidden" asp-for="Email" />

            <div class="form-group">



                <label asp-for="Name" class="text-secondary"></label>
                <div>
                    <span asp-validation-for="Name" class="text-danger">
                    </span>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend ">
                        <i class="btn btn-secondary fa fa-user"></i>
                    </div>





                    <input asp-for="Name" class="form-control" />

                </div>


            </div>
            <div class="form-group">



                <label asp-for="Surname" class="text-secondary"></label>

                <div>

                    <span asp-validation-for="Surname" class="text-danger">

                    </span>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <i class="btn btn-secondary fa fa-user "></i>
                    </div>
                    <input asp-for="Surname" class="form-control" />
                </div>

            </div>
            <div class="form-group">



                <label asp-for="Phone" class="text-secondary"></label>
                <div>
                    <span asp-validation-for="Phone" class="text-danger">
                    </span>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="btn btn-secondary">
                            <i class="fas fa-phone pt-1"></i>
                        </div>
                        
                    </div>
                    <input asp-for="Phone" class="form-control" />
                </div>

            </div>
            <div class="form-group">



                <label asp-for="Position" class="text-secondary"></label>
                <div>
                    <span asp-validation-for="Position" class="text-danger">
                    </span>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="btn btn-secondary">
                            <i class="fa fa-briefcase pt-1"></i>
                        </div>
                    </div>
                    <select asp-for="Position" class="form-control"
                            asp-items="@new SelectList(Enum.GetNames(typeof(Position)))"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PhotoURL" class="text-secondary"></label>
                <div>
                    <span asp-validation-for="PhotoURL" class="text-danger">

                    </span>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="btn btn-secondary">
                            <i class=" fas fa-underline pt-1"></i>
                        </div>
                       
                    </div>
                    <input asp-for="PhotoURL" class="form-control" placeholder="60x60" />
                </div>
            </div>


            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>

        </form>


    </div>
</div>

